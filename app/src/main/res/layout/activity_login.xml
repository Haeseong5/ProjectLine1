<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_title">
    </ImageView>
    <LinearLayout
        android:id="@+id/login_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_logo"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/login_email_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:fontFamily="sans-serif"
            android:hint="e-mail"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="10dp"
            android:textColor="#878787"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/login_password_edit"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:fontFamily="sans-serif"
            android:hint="password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingHorizontal="10dp"
            android:textColor="#878787"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>

    <Button
        android:id="@+id/login_email_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_input_layout"
        android:text="이메일로 로그인"
        android:textColor="@color/colorWhite"
        android:background="@color/colorMain"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/login_facebook_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_email_button"
        android:text="facebook으로 로그인"
        android:textColor="@color/colorWhite"
        android:background="@color/colorFacebook"
        android:layout_marginTop="5dp" />
    <Button
        android:id="@+id/login_google_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_facebook_button"
        android:text="구글으로 로그인"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGrey"
        android:layout_marginTop="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:textSize="14dp"
            android:text="계정이 없으신가요?" />

        <TextView
            android:id="@+id/login_signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:textColor="@color/colorMain"
            android:textSize="14dp"
            android:clickable="true"
            android:textStyle="bold"
            android:text="가입하기" />
    </LinearLayout>
</RelativeLayout>
