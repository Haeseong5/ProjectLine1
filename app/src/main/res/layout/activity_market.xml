<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/market_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorGrey"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/market_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중고 장터"
                android:textSize="20dp"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/market_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/market_write_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_write"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/market_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@+id/market_toolbar"
        android:paddingHorizontal="15dp">
        <TextView
            android:id="@+id/market_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 0"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/market_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#F3F3F3"
            android:text="정렬 기준" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/market_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/market_tab_layout"
        android:layout_marginLeft="10dp"
        android:scrollbars="none">

    </androidx.recyclerview.widget.RecyclerView>
